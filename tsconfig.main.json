{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "rootDirs": [
      "./src/main",
      "./src/shared"
    ],
    "outDir": "./dist/main",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/main", "src/shared"]
}