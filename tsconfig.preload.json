{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "rootDirs": [
      "./src/preload",
      "./src/shared"
    ],
    "outDir": "./dist/preload",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["electron"]
  },
  "include": ["src/preload", "src/shared"]
}